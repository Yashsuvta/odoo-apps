<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit_manager" model="ir.ui.view">
        <field name="name">res.users.form.inherit.manager</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <label for="x_manager_id" name="Manager"/>
                <field name="x_manager_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_users_tree_inherit_manager" model="ir.ui.view">
        <field name="name">res.users.tree.inherit.manager</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="x_manager_id"/>
            </xpath>
        </field>
    </record>
</odoo>
